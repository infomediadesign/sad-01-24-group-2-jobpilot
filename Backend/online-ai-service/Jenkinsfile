
pipeline {
    agent any
   
   environment {
        HEROKU_API_KEY = credentials('heroku-api-key')
    }

    stages {
        stage('Build') {
            steps {
                dir('Backend/online-ai-service') {
                     sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                     dir('Backend/online-ai-service') {
                        sh 'npm run test'
                     }
                }
            }
            post {
                failure {
                    error 'Tests failed, stopping pipeline'
                }
            }
        }
        stage('Deploy') {
            steps {
                 dir('Backend/online-ai-service') {
                        script {
                            withCredentials([string(credentialsId: 'heroku-api-key', variable: 'HEROKU_API_KEY')]) {
                                sh 'heroku auth:token'                  
                                sh 'heroku container:login'
                                sh 'heroku container:push web --app online-ai-service'
                                sh 'heroku container:release web --app online-ai-service' 
                            }

                        }
                    }
                }
            }
       
        }
    }